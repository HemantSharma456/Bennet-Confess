<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bennett Confess - Confessions</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-900 min-h-screen text-white font-poppins">

  <!-- Header -->
  <div class="flex justify-between items-center px-6 py-4">
    <h1 class="text-2xl font-bold text-white">Bennett <span class="text-blue-400">Confess</span></h1>
    
    <div class="space-x-4">
      <a href="/posts" 
         class="px-4 py-2 bg-green-500 hover:bg-green-400 text-white rounded-md font-semibold transition">
        + Create Confession
      </a>
    
      <a href="/logout" 
         class="px-4 py-2 bg-red-500 hover:bg-red-400 text-white rounded-md font-semibold transition">
        Logout
      </a>
    </div>
  </div>

  <div class="w-full min-h-screen px-4 py-6">
    <div class="max-w-6xl mx-auto">
      <div class="text-3xl font-bold mb-10">
        Hello, <span class="text-blue-400"><%= user.name %></span>
      </div>
      <h2 class="text-3xl font-semibold mb-8">Public Confessions</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <% publicPosts.forEach(post => { %>
            <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-xl p-5 text-white hover:scale-[1.01] transition-all duration-200">
            <div class="flex justify-between items-center mb-2">
                <span class="font-semibold text-blue-400">@<%= post.user.name %></span>
                <span class="text-sm text-gray-400"><%= post.date.toDateString() %></span>
            </div>

            <p class="text-zinc-100 leading-relaxed tracking-tight mb-4">
                <%= post.content %>
            </p>

            <% if (post.user._id.toString() === user._id.toString()) { %>
                <form action="/delete/<%= post._id %>" method="POST" class="text-right">
                <button
                    type="submit"
                    class="text-sm text-red-400 hover:text-red-600 transition duration-200"
                >
                    üóëÔ∏è Delete
                </button>
                </form>
            <% } %>
            </div>
        <% }) %>
</div>
</div>
</div>

</body>
</html>
